@model BeyazEsyaSepeti.Models.UserProductContainer;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeyazEsyaSepeti</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">BeyazEsyaSepeti</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a asp-controller="Product" asp-action="Index" asp-route-id="@Model.user.Id" class="nav-link" >Ana Sayfa </a>
                </li>
                <li class="nav-item ">
                    <a asp-controller="Product" asp-action="Buzdolabı" asp-route-id="@Model.user.Id" class="nav-link">Buzdolabı</a>
                </li>
                <li class="nav-item ">
                    <a asp-controller="Product" asp-action="CamasırMakinesi" asp-route-id="@Model.user.Id" class="nav-link">Çamaşır Makinesi </a>
                </li>

                <li class="nav-item ">
                    <a asp-controller="Product" asp-action="BulasikMakinesi" asp-route-id="@Model.user.Id" class="nav-link">Bulaşık Makinesi</a>
                </li>
                <li class="nav-item ">
                    <a asp-controller="Product" asp-action="Firin" asp-route-id="@Model.user.Id" class="nav-link">Fırın </a>
                </li>
            </ul>
        </div>
      

        <form asp-controller="User" class="form-inline my-2 my-lg-0">

            <button asp-controller="User" asp-action="Cart" asp-route-id="@Model.user.Id" class="btn btn-warning my-2 my-sm-0" style="margin-right:10px"> Sepetim(@Model.user.Cart.Count) </button>

            <button asp-controller="User" asp-action="Logout" class="btn btn-danger my-2 my-sm-0" type="submit" style="margin-right:10px"> Çıkış </button>

        </form>



    </nav>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2021 - BeyazEsyaSepeti</p>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>


</html>

